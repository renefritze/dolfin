#
# The contiuity equation for the incompressible 
# Navier-Stokes equations using cG(1)cG(1)
#
# Compile this form with FFC: ffc NSEContinuity.form.

name = "NSEContinuity"
scalar = FiniteElement("Lagrange", "triangle", 1)
vector = FiniteElement("Vector Lagrange", "triangle", 1)
constant = FiniteElement("Discontinuous Lagrange", "triangle", 0)

q            = BasisFunction(scalar)
p            = BasisFunction(scalar)
uc           = Function(vector)
f            = Function(vector)
inv_uc_norm  = Function(scalar)          # 1/|w|
h            = Function(constant)        # element size
C1           = Constant()                # stabilisation parameter

d1 = C1*0.5*h*inv_uc_norm                # stabiliation term: FIXME: include timestep!!

i0 = Index()
i1 = Index()
i2 = Index()

a = d1*q.dx(i0)*p.dx(i0)*dx 
L = d1*q.dx(i0)*f[i0]*dx - d1*q.dx(i0)*uc[i1]*uc[i0].dx(i1)*dx - q*uc[i0].dx(i0)*dx 



